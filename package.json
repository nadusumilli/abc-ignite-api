{
  "name": "abc-ignite-api",
  "version": "1.0.0",
  "description": "Production Grade Gym Management System API with maximum performance and clean code",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=\"tests/models\" --verbose",
    "test:integration": "jest --testPathPattern=\"tests/integration\" --verbose",
    "test:performance": "jest --testPathPattern=\"tests/performance\" --verbose",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:setup": "ts-node src/database/setup.ts",
    "db:migrate": "ts-node src/database/migrate.ts migrate",
    "db:rollback": "ts-node src/database/migrate.ts rollback",
    "db:status": "ts-node src/database/migrate.ts status",
    "db:seed": "ts-node src/database/seed.ts",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "validate": "npm run lint && npm run type-check && npm test",
    "clean": "rm -rf dist coverage logs",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "gym",
    "api",
    "postgresql",
    "express",
    "fitness",
    "booking",
    "management",
    "performance",
    "production",
    "clean-code",
    "typescript"
  ],
  "author": "ABC Ignite Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/abc-ignite-api.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/abc-ignite-api/issues"
  },
  "homepage": "https://github.com/your-org/abc-ignite-api#readme",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  }
}
